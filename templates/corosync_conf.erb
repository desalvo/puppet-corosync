# Please read the corosync.conf.5 manual page
compatibility: whitetank

totem {
        version: 2
        secauth: <%= @secauth_value %>
        threads: 0
        interface {
                ringnumber: 0
                bindnetaddr: <%= @bindnetaddr %>
                <%if @broadcast %>broadcast: yes<% else %>mcastaddr: <%= @mcastaddr %><% end %>
                mcastport: <%= @mcastport %>
        }
}

logging {
        fileline: off
        to_stderr: no
        to_logfile: yes
        to_syslog: yes
        logfile: /var/log/cluster/corosync.log
        debug: off
        timestamp: on
        logger_subsys {
                subsys: AMF
                debug: off
        }
}

amf {
        mode: disabled
}
