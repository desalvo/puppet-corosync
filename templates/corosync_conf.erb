# Please read the corosync.conf.5 manual page
compatibility: whitetank

totem {
        version: 2
        cluster_name: <%= @cluster_name %>
        secauth: <%= @secauth_value %>
        threads: 0
        interface {
                ringnumber: 0
                bindnetaddr: <%= @bindnetaddr %>
                <%if @broadcast %>broadcast: yes<% else %>mcastaddr: <%= @mcastaddr %><% end %>
                mcastport: <%= @mcastport %>
                ttl: 1
        }
        <%if @unicast -%>transport: udpu<% end %>
}

<% if @nodes -%>
nodelist {
<% @nodes.each do |node| -%>
        node {
                ring0_addr: <%= node["addr"] %>
                nodeid: <%= node["id"] %>
        }
<% end -%>
}

quorum {
        provider: corosync_votequorum
<% if @two_node -%>
        two_node: 1
<% end -%>
}

<% end -%>
logging {
        fileline: off
        to_stderr: no
        to_logfile: yes
        to_syslog: yes
        logfile: /var/log/cluster/corosync.log
        debug: off
        timestamp: on
        logger_subsys {
                subsys: AMF
                debug: off
        }
}

amf {
        mode: disabled
}
